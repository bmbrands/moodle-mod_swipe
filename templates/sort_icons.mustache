{{!
    @template mod_groupassign/user_heading

    This template renders the header.

    Example context (json):
    {
    }
}}
<div class="sorticons ml-2">
    {{#asc}}
        <span class="btn btn-primary btn-sm rounded disabled icon-nomargin">
        {{#pix}} t/sort_asc, core {{/pix}}
        </span>
    {{/asc}}
    {{^asc}}
        <a href="{{{sortdir}}}"
            data-toggle="tooltip"
            data-placement="top"
            class="btn btn-outline-primary btn-sm rounded icon-nomargin"
            title="{{#str}} sortbyx, core, {{$sort}}{{/sort}} {{/str}}">
            {{#pix}} t/sort_asc, core {{/pix}}
        </a>
    {{/asc}}
    {{#desc}}
        <span class="btn btn-primary btn-sm rounded disabled icon-nomargin">
        {{#pix}} t/sort_desc, core {{/pix}}
    </span>
    {{/desc}}
    {{^desc}}
        <a href="{{{sortdir}}}"
            data-toggle="tooltip"
            data-placement="bottom"
            class="btn btn-outline-primary btn-sm rounded icon-nomargin"
            title="{{#str}} sortbyxreverse, core, {{$sort}}{{/sort}} {{/str}}">
            {{#pix}} t/sort_desc, core {{/pix}}
        </a>
    {{/desc}}
</div>